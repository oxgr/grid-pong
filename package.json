{
  "name": "grid-pong",
  "version": "1.0.0",
  "description": "Pong on the Monome Grid",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "watchBack": "nodemon --watch src -e js --exec \"npm start\"",
    "watchFront": "nodemon --watch public -e js --exec \"npm run build\"",
    "watch": "npm run watchBack & npm run watchFront",
    "build": "npx esbuild ./public/main.js --bundle --outfile=out/out.js --format=esm --sourcemap",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Faadhi Fauzi",
  "license": "ISC",
  "dependencies": {
    "@types/p5": "^1.4.3",
    "browser-sync": "^2.11.2",
    "esbuild": "0.16.10",
    "express": "^4.18.2",
    "monome-grid": "^1.0.2",
    "p5": "^1.5.0",
    "socket.io": "^4.5.4",
    "tweakpane": "^3.1.1"
  }
}
